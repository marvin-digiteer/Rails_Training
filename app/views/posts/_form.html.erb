<div class = "container">
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= form.label :"Publish Date" %>
      <%= form.text_field :created_at, style: "display: block", class: "flatpickr" %>
    </div>
          
    <div>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :body, style: "display: block" %>
      <%= form.textarea :body %>
    </div>

    <div class="field">
      <%= form.label :active %>
      <%= form.check_box :active %>
      <%= form.label :featured %>
      <%= form.check_box :featured %>
    </div>

    <div>
      <%= form.submit @post.persisted? ? "Update Post" : "Create Post", class: "btn_submit" %>
    </div>
  <% end %>
</div>

<div id="<%= dom_id post %>">
  <div class = "post_title">
    <h4 id = "content">
      <%= post.title %>
    </h4>
  </div>
  <div class = "post_body">
    <p id = "content">
      <%= post.body %>
    </p>
    
    <hr>
    
    <div class = "footer">
    
      <div class = "actions">    
        <%= button_to "Edit", edit_post_path(post), method: :get, class: "btn_edit" %>
        <%= button_to "Delete", post, method: :delete, class: "btn_delete" %>
      </div>
      
      <div class = "date_created">
        <%= post.created_at.strftime("%B %d, %Y") %>
      </div>
    
    </div>  
  
  </div>  
  
</div>
